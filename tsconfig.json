{
  "compilerOptions": {
    "target": "ES6",
    "module": "es2020",
    "removeComments": true,
    "moduleResolution": "node",
    "noLib": false,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "./dist",
    "downlevelIteration": true,
    "sourceMap": true,
    "rootDir": "./src"
  },
  "exclude": ["node_modules", "dist"]
}
